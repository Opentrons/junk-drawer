# editorconfig
# https://editorconfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation for Python
[*.py]
indent_style = space
indent_size = 4

# 2-space indentation for YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2
